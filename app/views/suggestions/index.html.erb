<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <p class="lead">あなたのチーム名は</p>
  <div id="highest_suggestion" style="font-size: 500%;"></div>
</div>
<div class="row">
  <div class="col-sm-4"><ul id="list" class="list-unstyled" style="font-size: 200%;"></ul></div>
  <div class="col-sm-8">
    <p><a id ="retry" class="btn btn-lg btn-success" href="#" role="button">ランダム</a></p>
  </div>
</div>

<script type="text/javascript">
    function get_suggestion(){
      $.ajax("/suggestions/any.json").then(function(res) {
        $("#highest_suggestion").text(res.keyword);
      });
    }

    $(document).ready(function(){
      get_suggestion();
    });

    $("#retry").click(function(){
      var list =
      "<li>" + $("#highest_suggestion").text() + "</li>" +
      $("#list").html();
      $("#list").html(list);
      get_suggestion();
    });
</script>
