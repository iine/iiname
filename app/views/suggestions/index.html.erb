<div class="container">
    <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="suggestion col-md-12">
      <p class="lead">あなたのチーム名は</p>
      <div id="highest_suggestion"></div>
      <p class="lead">です</p>
    </div>
    <div class="question col-md-8 col-md-push-4">
      <p><a id ="retry" class="btn btn-lg btn-primary" href="#" role="button">ランダム</a></p>
    </div>
    <div class="list col-md-4 col-md-pull-8">
      <ul id="list" class="list-unstyled"></ul>
    </div>
  </div>
</div>

<script type="text/javascript">
    function get_suggestion(){
      $.ajax("/suggestions/any.json").then(function(res) {
        $("#highest_suggestion").text(res.keyword);
      });
    }

    $(document).ready(function(){
      get_suggestion();
    });

    $("#retry").click(function(){
      var list =
      "<li>" + $("#highest_suggestion").text() + "</li>" +
      $("#list").html();
      $("#list").html(list);
      get_suggestion();
    });
</script>
