<p id="notice"><%= notice %></p>

<div id="highest_suggestion" style="font-size: 500%;"></div>
<div id ="retry" style="font-size: 300%;">リトライ</div>
<ul id="list" style="font-size: 200%; list-style-type: none;"></ul>
<script type="text/javascript">
    $(document).ready(function(){
      $.ajax("/suggestions/any.json").then(function(res) {
        $("#highest_suggestion").text(res.keyword);
      });
    });

    $("#retry").click(function(){
      var list =
       "<li>" + $("#highest_suggestion").text() + "</li>" +
       $("#list").html();
      $.ajax("/suggestions/any.json").then(function(res) {
        $("#highest_suggestion").text(res.keyword);
      });
      $.ajax("/suggestions/any.json").then(function(res) {
        $("#list").html(list);
      });
    });
</script>

<%# for item in @list.items %>
<%#h (item.keyword) %>
<%# end %>
